<%= link_to 'My Bookstore', controller: 'books' %>
<%= link_to 'New book', new_book_path %>


<h1>Listing books</h1>
<%= link_to 'New book', new_book_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %>
      <td><%= book.text %>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
